<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:local="clr-namespace:TestProj.Views.Menu;assembly=TestProj"
                  xmlns:detailviews="clr-namespace:TestProj.Views.DetailViews;assembly=TestProj"
                  x:Class="TestProj.Views.Menu.MasterDetail">

    <MasterDetailPage.Master>
        <local:MasterPage x:Name="masterpage"/>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <detailviews:InfoScreen/>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>