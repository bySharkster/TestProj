<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestProj.Views.DetailViews.InfoScreen">

    
   <StackLayout x:Name="MainLayout">
        <Label Text="Files"  HorizontalOptions="Start" FontSize="30"/>
        <Entry Placeholder="Enter folder name" x:Name="folderNameEntry"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Add Folder" Clicked="Add_Folder_Button_Clicked"/>
            <Button Text="Refresh List" Clicked="Refresh_List_Button_Clicked"/>
        </StackLayout>
        <ListView x:Name="listView"> <!--ListView displays folders created in-app by the user-->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>

</ContentPage>